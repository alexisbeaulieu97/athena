"""Example setup.py for an Athena plugin package."""

from setuptools import find_packages, setup

setup(
    name="my-athena-plugin",
    version="0.1.0",
    description="Example plugin package for Athena testing framework",
    author="Your Name",
    author_email="your.email@example.com",
    packages=find_packages(),
    install_requires=[
        "athena-test-framework",  # Your plugin's dependencies
    ],
    entry_points={
        "athena.plugins": [
            # Register the plugin's entry point
            "network=my_plugin.plugin:create_plugin",
            "csv=my_plugin.reporters:create_csv_reporter",
        ],
    },
    classifiers=[
        "Development Status :: 3 - Alpha",
        "Intended Audience :: Developers",
        "License :: OSI Approved :: MIT License",
        "Programming Language :: Python :: 3",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Programming Language :: Python :: 3.10",
    ],
)